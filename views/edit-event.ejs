<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="/css/nodejs.css">
  <link rel="stylesheet" href="/css/sidebar.css">
  <meta charset="UTF-8">
  <title>Edit Event</title>
</head>
<body>

  <header style="width: 100%; position: fixed; top: 0; left: 0; background-color: #f8f9fa; z-index: 1000; padding: 10px;">
    <button class="openbtn" onclick="toggleSidebar()" style="display: inline-block; background-color: #007bff; color: white; border: none; padding: 10px 20px; cursor: pointer;">
      â˜° 
    </button>
  </header>

  <!-- Sidebar -->
  <div id="sidebar" class="sidebar" style="top: 60px;"> <!-- Adjusted to avoid overlap -->
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <a href="/event">Create Event</a>
    <form action="/logout?_method=DELETE" method="POST" style="display: inline;">
      <button type="submit" class="sidebar-logout">Logout</button>
    </form>
  </div>
  
  <h1>Edit Event</h1>
  <form action="/event/<%= event.id %>?_method=PUT" method="POST">
    <label for="name">Event Name:</label>
    <input type="text" id="name" name="name" value="<%= event.name %>" required><br>

    <label for="event_date">Event Date:</label>
    <input type="date" id="event_date" name="event_date" value="<%= event.event_date.toISOString().split('T')[0] %>" required><br>

    <label for="start_time">Start Time:</label>
    <input type="time" id="start_time" name="start_time" value="<%= event.start_time %>" required><br>

    <label for="end_time">End Time:</label>
    <input type="time" id="end_time" name="end_time" value="<%= event.end_time %>" required><br>

    <label for="guest_count">Guest Count:</label>
    <input type="number" id="guest_count" name="guest_count" value="<%= event.guest_count %>" required><br>

    <textarea name="details" rows="4"><%= event.details %></textarea><br>

    <button type="submit">Update Event</button>
  </form>
</body>

<script>
  // JavaScript to toggle the sidebar
  function toggleSidebar() {
    var sidebar = document.getElementById("sidebar");
    var main = document.getElementById("main");

    if (sidebar.style.width === "250px") {
      sidebar.style.width = "0";
      main.style.marginLeft = "0";
    } else {
      sidebar.style.width = "250px";
      main.style.marginLeft = "250px";
    }
  }
</script>

</html>
